    @model IEnumerable<ShipLine.Models.PortModel>

@{
    ViewData["Title"] = "Port Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if(Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {  id=item.PortId  }) |
                        @Html.ActionLink("Details", "Details", new {  id=item.PortId  }) |
                        @Html.ActionLink("Delete", "Delete", new {  id=item.PortId  })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p> EmptyModel</p>
}
