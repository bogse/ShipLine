@model ShipLine.Models.VoyageShipmentModel

@{
    ViewData["Title"] = "AddToVoyage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddToVoyage</h1>

<h4>VoyageShipmentModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToVoyage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VoyageId" class="control-label">Voyage Number</label>
                @Html.DropDownList("VoyageId", new SelectList(ViewBag.VoyageList, "Value", "Text"), "", new {@class= "form-control"})
                <span asp-validation-for="VoyageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
